doctype html
html
	head
		meta(http-equiv="content-type", content="text/html; charset=UTF-8")
		title Advancing Javascript - School of Net
		link(rel="stylesheet", type="text/css", href="style/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="style/main.css")
	body
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
					a#navTitle.navbar-brand(href='index.html')
		.container-fluid
			.form-inline
				.form-group
					input#desc.form-control(type='text', placeholder='Description')
				.form-group
					input#amount.form-control(type='text', placeholder='Amount')
				.form-group
					input#value.form-control(type='text', placeholder='Value')
				span#btnUpdate
					span#inputIDUpdate
					button.btn.btn-default(onclick='UpdateData();') Save
					button.btn.btn-default(onclick='resetForm();') Cancel
				span#btnAdd
					button.btn.btn-default(onclick='addData();') Add
					button.btn.btn-default(onclick='resetForm();') Reset
					button.btn.btn-default(onclick='deleteList();') Delete List
			#errors
			table.table
				thead
					tr
						td Description
						td Amount
						td Value
						td Action
				tbody#listTable
		nav.navbar.navbar-default.navbar-fixed-bottom
			.container
				h4.text-center.text-success
					| Total: 
					span#totalValue $0,00
					
		script(type='text/javascript', src='js/config.js')
		script(type='text/javascript', src='js/main.js')
